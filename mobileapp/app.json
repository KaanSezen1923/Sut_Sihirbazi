{
  "expo": {
    "name": "Süt Sihirbazı",
    "slug": "sut-sihirbazi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "sutsihirbazi",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sutsihirbazi.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Süt Sihirbazı'nın sesli komutlarınızı duyması için mikrofona ihtiyacı var."
      }
    },
    "android": {
      "package": "com.sutsihirbazi.app",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Süt Sihirbazı sesinizi duymak için izin istiyor.",
          "speechRecognitionPermission": "Süt Sihirbazı konuşmanızı metne çevirmek için izin istiyor."
        }
      ],
      "expo-speech-recognition"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
